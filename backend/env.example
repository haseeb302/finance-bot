# DynamoDB Configuration
DYNAMODB_ENDPOINT_URL=http://localhost:8000  # For local development, use AWS endpoint for production
DYNAMODB_REGION=us-east-1
DYNAMODB_ACCESS_KEY=local  # For local development, use real AWS credentials for production
DYNAMODB_SECRET_KEY=local  # For local development, use real AWS credentials for production
DYNAMODB_TABLE_PREFIX=financebot  # Prefix for all tables

# JWT Configuration
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=2  # 2 minutes - short-lived for security
REFRESH_TOKEN_EXPIRE_MINUTES=5  # 5 minutes - longer-lived for refreshing access tokens

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Pinecone Configuration
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=financebot-embeddings

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_NAME=FinanceBot API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
